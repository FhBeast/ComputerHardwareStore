@{
    Layout = "_Layout";
}
@model ComputerHardwareStore.ViewModels.LoginViewModel

    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Вход</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-area">
        <div class="container">
            <div class="wow-center">
                <div class="card col-md-3">
                    <form class="form-group" method="post" asp-controller="Account"
                          asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Email"></label><br />
                            <input class="form-control" asp-for="Email" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div>
                            <label class="control-label" asp-for="Password"></label><br />
                            <input class="form-control" asp-for="Password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div style="margin: 10px">
                            <input asp-for="RememberMe" />
                            <label asp-for="RememberMe"></label>
                        </div>
                        <div>
                            <input type="submit" value="Войти" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
