@{
    Layout = "_Layout";
}
@model ComputerHardwareStore.ViewModels.RegisterViewModel
    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Регистрация</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-area">
        <div class="container">
            <div class="wow-center">
                <div class="card col-md-3">
                    <form class="form-group" method="post" asp-controller="Account" asp-action="Register">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div>
                            <label label class="control-label" asp-for="Email">Логин</label><br />
                            <input class="form-control" asp-for="Email" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div>
                            <label label class="control-label" asp-for="Password"></label><br />
                            <input class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div>
                            <label label class="control-label" asp-for="PasswordConfirm"></label><br />
                            <input class="form-control" asp-for="PasswordConfirm" />
                            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                        </div>
                        <div style="padding-top: 10px">
                            <input type="submit" value="Регистрация" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>